// styles
.volume-view
  .panel-overview-volume
    margin-top 1.5

  .panel-overview-volume-header
    position relative
    padding-bottom 1
    margin-bottom 2
    padding-top 0.5

    .view-title, .view-context
      margin-bottom 0
      text-shadow -1px 0 2px green51

  .panel-overview-volume-header-fill
    position absolute
    top 0px
    bottom 0
    z-index -1
    background-color green52
    box-shadow box-shadow-def

   .panel-overview-volume-thumb
    max-width none
    width 100%
    margin-bottom f1

  .panel-overview-volume-ref
    a:before
      content " "
    ul > li:before
      background-color black

  .panel-overview-volume-citation
    padding-left 2
    text-indent b1 * -2
    margin-bottom f2
    text-align left
    span
    a
      text-indent 0


  .panel-overview-volume-reuses
    padding 0

    li
      &:before
        display none

    img
      size f23
      position relative
      top 1px

  .panel-overview-volume-funds
    margin-bottom f2

  .overview-access
    .button
      margin 0 b3
      vertical-align text-top
    .icon
      width b1

  .panel-overview-volume-access > .icon
    size 56px
    background-size contain
    vertical-align middle
    margin-right b3
    
  .panel-overview-global-record
    margin-right b3
    padding-width b8
    border-radius b8
    background-color neutral51

  #filelevelsummary
    width fit-content

.pvtTable 
    font-size 8pt
    text-align left
    border-collapse collapse

.pvtTable thead tr th, .pvtTable tbody tr th 
    background-color #e6EEEE
    border 1px solid #CDCDCD
    font-size 8pt
    padding 5px

.pvtTable tbody tr td 
    color #3D3D3D
    padding 5px
    background-color #FFF
    border 1px solid #CDCDCD
    vertical-align top
    text-align right


