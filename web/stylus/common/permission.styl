// styles

.permission-auth
  margin-bottom f1

.permission-auth-username
  font-line 1.5
  margin-right f4

.permission-auth-email
  color pale

.permission-auth-heading
  font-weight bold
  color gray
  padding-top f2
  .icon
    float right
    margin-top f2

.auth-grant-form .permission-auth-heading, .auth-grant-form validator[label="auth.expiration.title"] label
  background-color #fcede3
  color #333
  padding 5px 10px
  border-radius 5px
  margin 5px 0
  font-size 16px
  font-weight bold

.affiliatediv
  border-top 1px solid #ccc
  position relative
  height 60px
  legend 
    position absolute
    margin-top -14px
    background-color #fff

.clearfix:after 
    content ""
    display table
    clear both

article.clearfix 
  margin-bottom 40px

.permission-auth-pending
  border-radius b8
  background-color yellow51
  padding-left b8
  padding-right b8
  margin-left f4
  display inline
  vertical-align top
  font-size 0.8em

.permission-heading
  margin-bottom 10px
  .remove
    margin 3px 3px 0 0

.permission-auth-warning
  margin-left b1
  display block
  line-height 1

.permission-auth-right
  border-left 1px solid neutral
