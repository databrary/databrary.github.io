// mixins

placeholder(color)
  &:-moz-placeholder,
  &::-moz-placeholder,
  &:-ms-input-placeholder,
  &::-webkit-input-placeholder
    color color

input-shadow(color)
  box-shadow inset 0 1px 1px pale, 0 0 b4 color

input-no-spin()
  input[type=number]::-webkit-inner-spin-button,
  input[type=number]::-webkit-outer-spin-button
    -webkit-appearance none
    appearance none
    margin 0
  input[type=number]
    -moz-appearance textfield