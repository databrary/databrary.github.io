.search-view
  margin-top 72px
  label
    display inline
    text-transform initial
    font-weight normal

.search-clear
  margin-height b2

.search-left-section
  float left
  width 100%
  border 0
  border-radius b3
  font-size b2
  padding b3
  background-color neutral51
  ul
    padding 0
    margin 0

.search-filter
  border-bottom 1px dotted neutral53
  padding-top b3
  padding-bottom b3
  input-no-spin()

  &:last-of-type
    border-bottom 0
  .icon
    vertical-align text-top
  input:not(.input-age-input)
    margin-bottom 0
    height initial
    line-height initial
  div
    margin-bottom b3
  .input-age-input
  .input-age-select
    height 26px
    vertical-align top
  .input-age-input
    border-top-right-radius 0
    border-bottom-right-radius 0
    max-width 2.2
  .input-age-select
    border-top-left-radius 0
    border-bottom-left-radius 0

.search-filter-sub
  border-top 1px solid neutral53
  border-bottom 1px solid neutral53
  margin-left b2+b4
  padding-bottom b3

.search-volume-types
  padding-bottom b3
  input
    margin-bottom 0
.search-party-types
  li
    border-radius b8
    padding 0 b8
    border 0
  li:hover:not(.selected)
    link-color black
  .selected
    background-color green51

.search-input
  display inline-block
  width auto
  margin-left b2
  @media screen and (max-width: grid-mobile-width)
    width 100%

.search-suggestion
  font-weight bold
  color green

.search-results
  padding-left b1*1.5
  button
    vertical-align middle
  small
    margin b2

.search-results-section
  margin-bottom b1
  &:first-child
    margin-bottom 0

.search-results-showall
  text-align center
  font-size b2
  link-color green
  border-bottom 1px dotted neutral
  transition transition
  &:hover
    border-color green53

.search-party-results
  padding-bottom b1
  .portrait
    padding b2

.search-volume-results
  padding b2 b2 0 b2
  ul
    padding-left 0

.search-volume-results > li
  padding-bottom b3
  border-bottom green51 solid 3px
  margin-bottom b3
  &:last-of-type
    border-bottom 0

.search-volume-containers
  margin-top b3
  border-top neutral dotted 1px
  padding-top b3
  vertical-align top

.search-volume-result-title
  margin-top 0
  font-size b1
  line-height b1 * 1.5
  text-indent -36px
  button
    margin-right b2 - b8
    background-size 80%

.search-pages
  input-no-spin()
  input[type=number]
    max-width 2
    width auto
    padding-top 1px
    border-radius 0
    -moz-appearance textfield
    line-height 31px
  .icon
    top b8
    margin 0 b8
  .button
    margin -1px 0 0 0
    padding 2px b8
    min-width b1*1.5
    border-radius 0
  .search-backward,.search-forward
    display inline-flex
  .search-backward > .button:first-child, input:first-child
    border-top-left-radius b8
    border-bottom-left-radius b8
  .search-forward > .button:last-child, input:last-child
    border-top-right-radius b8
    border-bottom-right-radius b8

.additional-filters
  margin-top b3
