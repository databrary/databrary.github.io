.download-popup
  position relative
  min-height 100%
  left 0
  right 0
  margin 0 auto
  padding b2
  padding-bottom b1*2
  background-color white
  border b1*1.5 solid green52
  text-align center
  .button.close
    position absolute
    top 0
    right 0
    size b1*2
    margin-right 0
  a.button
    margin-top b1
    margin-bottom b2
  .view-link
    display inherit
    text-align initial
  p
    margin b1 b2

.popup-classification-title
  font-weight bold
  color red

.popup-file-info
  h3
    word-break break-all
  h3,h4
    margin-top 3
  span
    line-height b2*3
  ul
    padding 0
  li:not(:last-of-type)
    margin-right b2

.popup-format-icon
  height b1*1.25
  width auto
  margin-right b3

.popup-classification
  padding-top b1
  margin-top b2

.popup-classification:not(.release-legend)
  border-top 1px solid green51

.popup-classification > ul
  text-align initial
  li:first-of-type
    font-weight bold
.popup-cite
  p
    text-align center

.download-sessions, .download-files
  position relative
  margin b2
  padding-left 0
  text-align initial

.download-files
  word-break break-all

.download-no-permission
  color pale
  font-style oblique

.download-sessions
  border-top 3px solid green51
  border-bottom 3px solid green51

.download-sessions > li:first-of-type, .popup-classification > ul > li
  border-bottom none
  margin-bottom b8

.download-sessions > li
  border-bottom 1px solid neutral51
  padding-top b8
  padding-bottom b8

